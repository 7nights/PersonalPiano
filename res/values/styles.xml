<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="PersonalPianoTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/PersonalPianoTheme.ActionBarStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="PersonalPianoTheme.ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:titleTextStyle">@style/PersonalPianoTheme.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="PersonalPianoTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        
    </style>
    
    <style name="subtext">
        <item name="android:textColor">#777</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="titleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    

</resources>
